{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2020": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "max-len": ["error", {"code": 120, "ignoreUrls": true}],
        "no-unused-vars": 0,
        "indent": [
            "error",
            4
        ],
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "single"
        ]
    },
    "globals": {
        "logger": "readonly"
    },
    "ignorePatterns": ["node_modules/*", "dist/*", "src/tests/*"]
}
